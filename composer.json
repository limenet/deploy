{
    "name": "limenet/deploy",
    "description": "Deploy a new version using a GitHub webhook",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "symfony/http-foundation": "^3.1 | ^4.0"
    },
    "suggest": {
        "limenet/deploy-telegram": "Get notified on Telegram about deploys",
        "limenet/deploy-rollbar": "Notify Rollbar about deploys",
        "limenet/git-version": "Get current version based on the Git repository"
    },
    "autoload": {
        "psr-4": {
            "limenet\\": "src/limenet/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "limenet\\": "tests/limenet"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Linus Metzler",
            "email": "linus.metzler@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    }
}
